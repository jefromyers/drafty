# LLM Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=AIza...
# Or use GOOGLE_API_KEY as alternative for Gemini
GOOGLE_API_KEY=AIza...

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.0-flash-exp

# Data4SEO Credentials (for SERP data)
DATA4SEO_USERNAME=your_username
DATA4SEO_PASSWORD=your_password

# Browserless Configuration (optional)
BROWSERLESS_URL=http://localhost:3000

# Optional: Ollama for local models
OLLAMA_HOST=http://localhost:11434

# Optional: Custom API endpoints
OPENAI_BASE_URL=https://api.openai.com/v1
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Optional: Default settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_TEMPERATURE=0.7

# Optional: spaCy model (if not using default)
SPACY_MODEL=en_core_web_sm